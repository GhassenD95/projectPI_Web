    {{ form_start(form, {'attr': { 'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}
    <div class="bg-white shadow rounded-lg p-6"
    x-data="{ fileName: 'No file chosen' }">
    <div class="mb-6">
        {{ form_label(form.nom, 'Exercise Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.nom, {'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3',
            ':class': 'form.nom.vars.errors.length > 0 ? "border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500" : ""'
        }}) }}
        {% if form.nom.vars.errors|length > 0 %}
        <p class="mt-2 text-sm text-red-600" x-show="true">
            {% for error in form.nom.vars.errors %}
                {{ error.message }}
            {% endfor %}
        </p>
        {% endif %}
    </div>

    <!-- Exercise Type Dropdown -->
    <div class="mb-6">
        {{ form_label(form.typeExercice, 'Exercise Type', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.typeExercice, {'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3',
            ':class': 'form.typeExercice.vars.errors.length > 0 ? "border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500" : ""'
        }}) }}
        {% if form.typeExercice.vars.errors|length > 0 %}
            <p class="mt-2 text-sm text-red-600" x-show="true">
                {% for error in form.typeExercice.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </p>
        {% endif %}
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <!-- Duration -->
        <div>
            {{ form_label(form.dureeMinutes, 'Duration (min)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.dureeMinutes, {'attr': {
                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3',
                ':class': 'form.dureeMinutes.vars.errors.length > 0 ? "border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500" : ""'
            }}) }}
            {% if form.dureeMinutes.vars.errors|length > 0 %}
                <p class="mt-2 text-sm text-red-600" x-show="true">
                    {% for error in form.dureeMinutes.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </p>
            {% endif %}
        </div>

        <!-- Sets -->
        <div>
            {{ form_label(form.sets, 'Sets', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.sets, {'attr': {
                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3',
                ':class': 'form.sets.vars.errors.length > 0 ? "border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500" : ""'
            }}) }}
            {% if form.sets.vars.errors|length > 0 %}
                <p class="mt-2 text-sm text-red-600" x-show="true">
                    {% for error in form.sets.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </p>
            {% endif %}
        </div>

        <!-- Reps -->
        <div>
            {{ form_label(form.reps, 'Repetitions', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.reps, {'attr': {
                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3',
                ':class': 'form.reps.vars.errors.length > 0 ? "border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500" : ""'
            }}) }}
            {% if form.reps.vars.errors|length > 0 %}
                <p class="mt-2 text-sm text-red-600" x-show="true">
                    {% for error in form.reps.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </p>
            {% endif %}
        </div>
    </div>

    <!-- Image Upload -->
    <div class="mb-6">
        {{ form_label(form.image, 'Exercise Image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        <div class="mt-1 flex items-center">
            <label for="{{ form.image.vars.id }}" class="cursor-pointer">
                <div class="relative">
                    {{ form_widget(form.image, {'attr': {
                        'class': 'sr-only',
                        '@change': 'fileName = $event.target.files[0] ? $event.target.files[0].name : "No file chosen"'
                    }}) }}
                    <div class="flex items-center justify-center px-4 py-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                         :class="form.image.vars.errors.length > 0 ? 'border-red-300 text-red-900' : ''">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Choose a file
                    </div>
                </div>
            </label>
            <span class="ml-3 text-sm text-gray-500" x-text="fileName"></span>
        </div>
        <p class="mt-2 text-sm text-gray-500">JPEG or PNG, max 2MB</p>
        {% if form.image.vars.errors|length > 0 %}
            <p class="mt-2 text-sm text-red-600" x-show="true">
                {% for error in form.image.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </p>
        {% endif %}
    </div>

    <!-- Form Actions -->
    <div class="flex justify-end pt-6 border-t border-gray-200">
        <a href="{{ path('app_exercice_index') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Cancel
        </a>
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {{ button_label|default('Save') }}
        </button>
    </div>
</div>
{{ form_end(form) }}
